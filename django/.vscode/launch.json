    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:7010"
            ],
            "django": true
        },
        {
            "name": "Python: Django parallel",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:7002"
            ],
            "django": true
        },
        {
            "name": "Python: Django Notebook",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "shell_plus",
                "--notebook"
            ],
            "django": true
        },
        {
            "name": "Python: Django Test",
            "type": "python",
            "request": "launch",
            "justMyCode": true,
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "--parallel",
                "--no-input"
            ],
            "django": true
        },
        {
            "name": "Django: Coverage",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "coverage"
            ],
            "django": true
        },
        {
            "name": "Python: Without DB Django Test",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "--keepdb",
                "--parallel",
                "--no-input"
            ],
            "django": true
        },
        {
            "name": "Test: Make Migrations",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "makemigrations"
            ],
            "django": true
        },
        {
            "name": "Test: Migrations",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "migrate"
            ],
            "django": true
        },
        {
            "name": "PythonRQ: Scheduler",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "rqscheduler"
            ],
            "django": true
        },
        {
            "name": "PythonRQ: Worker",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "rqworker",
                "default",
                "fintoc_app"
            ],
            "django": true
        },
        {
            "name": "Test: By Name",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "test",
                "--no-input",
                "-k",
                "TestCustomView"
            ],
            "django": true
        }
    ],
    "compounds": [
        {
            "name": "Queue Tasks",
            "configurations": [
                "PythonRQ: Scheduler",
                "PythonRQ: Worker"
            ]
        },
        {
            "name": "Run all services",
            "configurations": [
                "Python: Django",
                "PythonRQ: Scheduler",
                "PythonRQ: Worker"
            ]
        }
    ]
}